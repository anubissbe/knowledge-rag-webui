# Knowledge RAG Web UI - Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL (used for CORS and redirects)
VITE_APP_URL=http://localhost:5173

# =============================================================================
# API Configuration
# =============================================================================

# Main API Base URL
VITE_API_BASE_URL=http://localhost:8002

# MCP Server URLs
VITE_RAG_SERVER_URL=http://localhost:8002
VITE_KNOWLEDGE_GRAPH_URL=http://localhost:8001
VITE_VECTOR_DB_URL=http://localhost:8003
VITE_UNIFIED_DB_URL=http://localhost:8004

# =============================================================================
# Real-time Communication
# =============================================================================

# WebSocket URL for real-time updates
VITE_WEBSOCKET_URL=ws://localhost:8005

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Secret (change in production!)
VITE_JWT_SECRET=your-super-secret-jwt-key-change-in-production

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_NOTIFICATIONS=true

# Debug Features (disable in production)
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_MCP_TEST_PAGE=false

# =============================================================================
# Performance & Optimization
# =============================================================================

# Pagination and Limits
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# =============================================================================
# Production Environment Example
# =============================================================================

# NODE_ENV=production
# VITE_API_BASE_URL=https://api.knowledge-rag.example.com
# VITE_WEBSOCKET_URL=wss://ws.knowledge-rag.example.com
