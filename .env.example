# Knowledge RAG WebUI Environment Configuration
# Copy this file to .env and customize the values for your environment

# ===== API Configuration =====
# Backend API server URL - change to your backend server
VITE_API_URL=http://localhost:3001

# WebSocket URL for real-time updates - should match your backend WebSocket endpoint
VITE_WEBSOCKET_URL=ws://localhost:3001

# ===== Application Configuration =====
# Public URL for the application (used for sharing and PWA features)
VITE_PUBLIC_URL=http://localhost:5173

# Application environment (development, staging, production)
VITE_APP_ENV=development

# ===== Feature Flags =====
# Enable/disable PWA features (service worker, offline support)
VITE_ENABLE_PWA=true

# Enable/disable real-time WebSocket features
VITE_ENABLE_WEBSOCKET=true

# Enable/disable offline mode capabilities
VITE_ENABLE_OFFLINE=true

# ===== Analytics & Monitoring =====
# Google Analytics tracking ID (optional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry Error Tracking Configuration
# Sign up for free at https://sentry.io
# VITE_SENTRY_DSN=https://your-dsn@sentry.io/project-id
# VITE_SENTRY_ENVIRONMENT=development
# VITE_SENTRY_ENABLED=false
# VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# LogRocket Session Recording (optional)
# VITE_LOGROCKET_APP_ID=your-app-id/project-name

# DataDog Real User Monitoring (optional)
# VITE_DATADOG_CLIENT_TOKEN=your-client-token
# VITE_DATADOG_APPLICATION_ID=your-application-id

# ===== Development Configuration =====
# Enable development tools and debug features
VITE_DEV_TOOLS=true

# Mock data mode - use mock data instead of real API calls
VITE_MOCK_MODE=false

# ===== Security Configuration =====
# API key encryption key (optional - for client-side key storage)
# VITE_ENCRYPTION_KEY=your-32-character-encryption-key

# ===== Customization =====
# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Default language code (en, es, fr, de, etc.)
VITE_DEFAULT_LANGUAGE=en

# App Version (for release tracking)
VITE_APP_VERSION=0.0.0

# ===== Performance =====
# Maximum number of memories to load per page
VITE_PAGE_SIZE=20

# WebSocket reconnection timeout in milliseconds
VITE_WS_RECONNECT_TIMEOUT=5000

# ===== NOTES =====
# 1. Variables prefixed with VITE_ are exposed to the client-side code
# 2. Remove the # to uncomment optional variables
# 3. Restart the development server after changing these values
# 4. Never commit sensitive values like API keys or secrets to version control
# 5. Use different .env files for different environments (.env.local, .env.production)

# ===== Example Production Values =====
# For production deployment, consider these settings:
# VITE_API_URL=https://api.yourapp.com
# VITE_WEBSOCKET_URL=wss://api.yourapp.com
# VITE_PUBLIC_URL=https://yourapp.com
# VITE_APP_ENV=production
# VITE_DEV_TOOLS=false
# VITE_MOCK_MODE=false