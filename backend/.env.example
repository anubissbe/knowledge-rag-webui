# Server Configuration
PORT=5002
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Change this in production! Never use the default value
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRY=7d

# Database Configuration (future PostgreSQL + pgvector)
DATABASE_URL=postgresql://user:password@localhost:5432/knowledge_rag

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Keys (future integrations)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# File Upload (future feature)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.txt,.md,.pdf,.json

# Search Configuration
SEARCH_RESULTS_LIMIT=50
SEARCH_MIN_SCORE=0.5

# Export Configuration
EXPORT_MAX_RECORDS=1000
EXPORT_TIMEOUT_MS=30000